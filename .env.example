# MongoDB Configuration
MONGODB_URI=mongodb://username:password@host:port/database

# JWT Secret - MUST be a secure random string (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-secure-random-64-byte-hex-string-here

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS and password reset emails)
FRONTEND_URL=http://localhost:5173

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,https://taxflow.it,https://www.taxflow.it

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Fattura Elettronica API
# Get your credentials from: https://www.fattura-elettronica-api.it
# After registration, you'll receive username and password
FATTURA_ELETTRONICA_USERNAME=your_username_here
FATTURA_ELETTRONICA_PASSWORD=your_password_here
FATTURA_ELETTRONICA_API_MODE=test  # test or prod
# Test endpoint: https://fattura-elettronica-api.it/ws2.0/test
# Production endpoint: https://fattura-elettronica-api.it/ws2.0/prod

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
